<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">



    <RelativeLayout
        android:id="@+id/rlChoosenPicture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFF"
        android:layout_weight="3">
        <createnote_modul.models.CusView
            android:id="@+id/cvChossenColorIconSide"
            android:layout_width="137dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:id="@+id/ivLastChooserPicture"
            android:scaleType="fitXY"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="14dp"
            app:srcCompat="@android:drawable/checkbox_off_background"
            android:layout_alignTop="@+id/cvChossenColorIconSide"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <TextView
        android:background="@color/colorPrimary"
        android:id="@+id/tvDivideFragmentGidPicture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:layout_below="@+id/rlChoosenPicture" />

    <LinearLayout
        android:orientation="vertical"
        android:background="#FFFF"
        android:id="@+id/lnPictureChooserForFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:layout_below="@+id/tvDivideFragmentGidPicture" />

</LinearLayout>
