<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >

    <RelativeLayout
        android:id="@+id/rlChoosenColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFF"
        android:layout_weight="3">

        <createnote_modul.models.CusView
            android:id="@+id/cvchossenColor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <ToggleButton
            android:id="@+id/tbChangeColorType"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@+id/cvchossenColor"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:background="@drawable/toggle"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="@color/colorPrimary" />

    <GridView
        android:id="@+id/gvChoosenColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/rlChoosenColor"
        android:layout_weight="6.5"
        android:numColumns="5"
        android:background="@drawable/corner_gridview"
        android:stretchMode="columnWidth" />
</LinearLayout>
